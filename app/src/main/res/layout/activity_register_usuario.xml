<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUsuarioActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/Bienvenido_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta"
        android:textAlignment="textStart"
        android:paddingLeft="15dp"
        android:layout_marginTop="50dp"
        android:textSize="23dp" />


    <EditText
        android:id="@+id/emailRegister_txt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/passwordRegister_txt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/passwordConfirmRegister_txt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Confirmar contraseña"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textSize="18sp"/>


    <Button
        android:id="@+id/singUp_button"
        android:layout_width="200dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/main"
        android:drawableBottom="@color/black"
        android:text="Registrarse"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Ya se encuentra Registrado?"
        android:textColor="@color/main"
        android:paddingLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/VolverLogin_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:paddingLeft="40dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:backgroundTint="#00FFFFFF"
        android:textColor="@color/main" />

</LinearLayout>